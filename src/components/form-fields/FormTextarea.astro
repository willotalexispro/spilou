---

const { label, name, placeholder, rows = 5, required} = Astro.props;
---

<div class="form-field__container">
  {label && <label for={name}>{label}</label>}
  <textarea id={name} name={name} placeholder={placeholder} rows={rows} required={required}></textarea>
</div>

<style>
  .form-field__container {
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }
  .form-field__container label {
    font-size: 0.9rem;
    font-weight: 600;
  }
  .form-field__container textarea {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 2px solid var(--theme-surface-1);
    color: var(--theme-on-bg);
    background: var(--theme-bg);
    border-radius: calc(var(--theme-shape-radius) / 2);
    outline: none;
    font-family: inherit;
    font-size: 1rem;
    resize: vertical;
    transition: border-color var(--theme-transition), box-shadow var(--theme-transition);
  }
  .form-field__container textarea::placeholder {
    color: var(--theme-on-bg);
    opacity: 0.4;
  }
  .form-field__container textarea:focus {
    border-color: var(--theme-primary);
    box-shadow: 0 0 0 3px rgba(108, 92, 231, 0.15);
  }
</style>
