---
const { label, name, options, required} = Astro.props;
---

<div class="form-field__container">
  {label && <label for={name}>{label}</label>}
  <div class="select-wrapper">
    <select id={name} name={name} required={required}>
      <option disabled selected value="">Choisir une option</option>
      {options?.map((option) => (
        <option value={option}>{option}</option>
      ))}
    </select>
  </div>
</div>

<style>
  .form-field__container {
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }
  .form-field__container label {
    font-size: 0.9rem;
    font-weight: 600;
  }
  .select-wrapper {
    position: relative;
  }
  .select-wrapper::after {
    content: 'â–¾';
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--theme-primary);
    pointer-events: none;
    font-size: 1rem;
  }
  .form-field__container select {
    width: 100%;
    padding: 0.75rem 2.5rem 0.75rem 1rem;
    border: 2px solid var(--theme-surface-1);
    color: var(--theme-on-bg);
    background: var(--theme-bg);
    border-radius: calc(var(--theme-shape-radius) / 2);
    outline: none;
    font-family: inherit;
    font-size: 1rem;
    cursor: pointer;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    transition: border-color var(--theme-transition), box-shadow var(--theme-transition);
  }
  .form-field__container select:focus {
    border-color: var(--theme-primary);
    box-shadow: 0 0 0 3px rgba(108, 92, 231, 0.15);
  }
</style>
